<div class="container devise-form">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form role="form">
        <h2>Sign up</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.text_field :username, autofocus: true, hide_label: true, placeholder: "Username" %>

          <%= f.email_field :email, hide_label: true, placeholder: "Email Address" %>

          <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "Password" %>

          <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: "Password Confirmation" %>

          <%= f.submit "Sign up", class: "btn btn-primary btn-wide" %>
        <% end %>
      </form>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>