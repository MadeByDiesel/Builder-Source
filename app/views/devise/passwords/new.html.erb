<div class="container devise-form">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form role="form">
        <h2>Forgot your password?</h2>

        <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email Address" %>

          <%= f.submit"Send me reset password instructions", class: "btn btn-primary btn-wide" %>
        <% end %>
      </form>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>